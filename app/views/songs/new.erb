<h1>New Song</h1>
<form class="" action="/songs" method="post">
  <p>Name: <input type="text" name="song[name]" id="Name" value=""></p>

  <p>Create a new artist: <input type="text" name="song[artist]" value=""></p>
  <p>Choose an existing artist:</p>
<%Artist.all.each do |artist| %>
<input type="radio" name="song[artist_ids][]" value="<%=artist.id%>"><%=artist.name%></input>
<%end%>
  <p>Create a new genre: <input type="text" name="song[genre]" value=""></p>

  <p>Choose an existing genre:</p>
<%Genre.all.each do |genre| %>
<input type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>"><%=genre.name%></input>
<%end%>
<input type="submit" value="Submit">
</form>
